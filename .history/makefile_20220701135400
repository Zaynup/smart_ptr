src = $(wildcard ./src/*.c)
obj = $(patsubst ./src/%.c, ./obj/%.o, $(src))

inc_path = ./include/
CC = gcc
target=app	
CPPFLAGS =
CFLAGS = -I
LDFLAGS = 

ALL:$(target)



$(obj):./obj/%.o:./src/%.c	
	$(CC) -c $< -o $@ $(CFLAGS) $(inc_path)
	
$(target):$(obj) 
	$(CC) $(obj) -o $(target)
	
clean:
	-rm -rf $(target) $(obj)

.PHONY: clean ALL
